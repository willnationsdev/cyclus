{
    "effects": [{
            "name": "damage", //the target takes X damage
            "params": [
                "value" //- the amount of damage to deal
            ]
        },
        {
            "name": "heal", //the taget heals X damage
            "params": [
                "value" //- the amount of damage to heal
            ]
        },
        {
            "name": "spawn_bomb", //spawns a bomb terrain that explodes when entered
            "params": [
                "location" // the location in which to spawn a bomb
            ]
        },
        {
            "name": "spawn_pillar", //spawns a pillar terrain that blocks movement and line-of-sight attacks
            "params": [
                "location" // the location in which to spawn a pillar
            ]
        },
        {
            "name": "spawn_warp", //spawns a warp terrain that teleports content to another non-warp terrain (bombs and pillars are also redirected)
            "params": [
                "location", // the location in which to spawn a warp
                "teleport_location" // the location to which the warp teleports
            ]
        },
        {
            "name": "void", //removes phantoms and terrain from a space
            "params": [
                "location" // the location in which to remove elements
            ]
        },
        {
            "name": "teleport", //moves the current character to a different space, skipping obstructions. Cannot land on another character.
            "params": [
                "location" //- the location to teleport to
            ]
        },
        {
            "name": "move", //moves the current character to a different space, stopping if obstructed.
            "params": [
                "location" //- the location to move towards
            ]
        },
        {
            "name": "terraform", //changes a terrain from one type to another
            "params": [
                "location", //- the location in which to change the terrain
                "type" //- the type of terrain that should be placed there
            ]
        },
        {
            "name": "durable", //until end of turn, you do not take damage
            "params": []
        },
        {
            "name": "trigger",
            "params": [
                "skill_name"
            ]
        }
    ],
    "skill": [
        /*
            name = the name of the skill as it appears in-game
            range = the area from the user that the target must fall within in order to use this skill
            anim = the sprite animation that is used for this skill
            effects = the sequence of effects that are triggered on all of those hit by the skill
        */
        {
            "name": "create_bomb",
            "region": { "shape": "point" },
            "anim": "res://assets/textures/",
            "effects": [
                "spawn_bomb"
            ]
        },
        {
            "name": "create_pillar",
            "region": { "shape": "point" },
            "anim": "res://assets/textures/",
            "effects": [
                "spawn_pillar"
            ]
        },
        {
            "name": "create_warp_field",
            "region": { "shape": "point" },
            "anim": "res://assets/textures/",
            "effects": [
                "spawn_bomb"
            ]
        },
        {
            //to be triggered by spawned bombs
            "name": "explosion",
            "range": { "shape": "radius", "value": 2 },
            "region": { "shape": "point" },
            "anim": "res://assets/textures/",
            "effects": [
                "void",
                "damage"
            ]
        },
        {
            "name": "teleport",
            "region": { "shape": "point" },
            "anim": "res://assets/textures/",
            "effects": [
                "void",
                "damage"
            ]
        }
    ],
    "cards": [
        /*
            name = the name of the card as it appears in-game
            description = the text description of the card as it appears in-game
            cost = the number of points consumed to use the skill
            region = the area that is affected by the skill
        */
        {
            "name": "Spawn Bomb",
            "description": "SPAWNS a Bomb tile.\nBombs deal 1 damage to characters who enter them.\nBombs explode on Pillars",
            "cost": 1,
            "range": { "shape": "radius", "value": 2 },
            "icon": "res://assets/textures/spawn_bomb_icon.tres",
            "skills": ["create_bomb"],
            "character_anim": "slam"
        },
        {
            "name": "Spawn Pillar",
            "description": "SPAWNS a Pillar tile.\nPillars block movement.",
            "cost": 1,
            "icon": "res://assets/textures/spawn_pillar_icon.tres",
            "skills": ["create_bomb"],
            "character_anim": "cast"
        },
        {
            "name": "Warp Field",
            "description": "Create a warp field",
            "cost": 1,
            "icon": "res://assets/textures/",
            "skills": ["teleport"],
            "character_anim": "focus"
        },
        {
            "name": "Bulldoze",
            "description": "",
            "cost": 2,
            "icon": "res://assets/textures/",
            "skills": ["bulldoze"],
            "character_anim": "charge"
        }
    ]
}